<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- 特性声明 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.screen.landscape"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />

    <!-- 自定义权限（动态 Receiver 用） -->
    <permission
        android:name="com.example.weibo.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.weiboxx.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="com.example.weibo.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_weibo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_weibo"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeiBoxx"
        android:usesCleartextTraffic="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules">

        <!-- WelcomeActivity - 欢迎页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.welcome.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.WeiBoxx">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SpActivity - 启动页（Compose 版本，备用） -->
        <activity
            android:name="com.example.weibo.ui.welcome.SpActivity"
            android:exported="false"
            android:theme="@style/Theme.WeiBoxx" />

        <!-- MainActivity (Compose 版本) -->
        <activity
            android:name="com.example.weibo.ui.MainActivity"
            android:exported="true" />

        <!-- MediaPreviewActivity - 媒体预览页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.preview.MediaPreviewActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <!-- LiveStreamActivity - 直播页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.livestream.LiveStreamActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <!-- SmsLoginActivity - 短信验证码登录页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.login.SmsLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.WeiBoxx" />

        <!-- PasswordLoginActivity - 账号密码登录页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.login.PasswordLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.WeiBoxx" />


        <!-- GeetestActivity - 极验验证页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.web.GeetestActivity"
            android:exported="false"
            android:theme="@style/Theme.WeiBoxx" />

        <!-- CountryPickerActivity - 国家选择页面（Compose 版本） -->
        <activity
            android:name="com.example.weibo.ui.login.CountryPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.WeiBoxx" />

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.weibo.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- AndroidX Startup -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.weibo.androidx-startup"
            android:exported="false"
            tools:replace="android:authorities">
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:exported="false"
            android:directBootAware="true" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:permission="android.permission.DUMP"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
